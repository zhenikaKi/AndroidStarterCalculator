<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_padding">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_first_value_id"
        android:layout_width="@dimen/null_size"
        app:layout_constraintWidth_percent="0.40"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_first_value_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_value"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/operation_id"
        android:layout_width="@dimen/null_size"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/input_first_value_id"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="@dimen/main_padding"
        android:entries="@array/operations"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_second_value_id"
        android:layout_width="@dimen/null_size"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/operation_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_second_value_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/second_value"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_run_calculator_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_run"
        app:layout_constraintTop_toBottomOf="@id/input_second_value_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>